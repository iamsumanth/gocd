define(['mithril'], function (m) {

    var AgentRowWidget = {
      view: function (ctrl, args) {
        var agent         = args.agent;
        var resources     = agent.resources();
        var environments  = agent.environments();

        if (resources.length == 0) {
          resources = (<em class="none">none specified</em>);
        } else {
          resources = resources.join(', ');
        }

        if (environments.length == 0) {
          environments = (<em class="none">none specified</em>);
        } else {
          environments = environments.join(', ');
        }
        return (
          <tr key={agent.uuid()}>
            <td>
              <input type="checkbox"
                     checked={args.checkBoxModel()}
                     onchange={m.withAttr('checked', args.checkBoxModel)}
              />
            </td>
            <td>{agent.hostname()}</td>
            <td>{agent.sandbox()}</td>
            <td>{agent.operatingSystem()}</td>
            <td>{agent.ipAddress()}</td>
            <td>{agent.status()}</td>
            <td>{agent.readableFreeSpace()}</td>
            <td>{resources}</td>
            <td>{environments}</td>
          </tr>
        );
      }
    };
    return AgentRowWidget;
  });