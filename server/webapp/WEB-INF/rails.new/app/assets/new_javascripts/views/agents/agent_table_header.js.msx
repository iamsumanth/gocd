define(['mithril'], function (m) {

  var AgentsTableHeader = {
    view: function (ctrl, args) {
      return (
        <thead>
        <tr>
          <td width="2%">
            <input type="checkbox"
                   checked={args.checkboxValue()}
                   onclick={m.withAttr('checked', function(value) {
                      args.onCheckboxClick(value);
                   })}
            />
          </td>
          <td width="13%">
            <span onclick={args.sortBy.bind(args.sortBy, 'hostname', 'asc')}>Agent</span>
            <span onclick={args.sortBy.bind(args.sortBy, 'hostname', 'desc')}>Name</span>
          </td>
          <td width="5%" >
            <span onclick={args.sortBy.bind(args.sortBy, 'sandbox', 'asc')}>Sandbox</span>
            <span onclick={args.sortBy.bind(args.sortBy, 'sandbox', 'desc')}>Sandbox</span>
          </td>
          <td width="12%">
            <span onclick={args.sortBy.bind(args.sortBy, 'operatingSystem', 'asc')}>OS</span>
            <span onclick={args.sortBy.bind(args.sortBy, 'operatingSystem', 'desc')}>OS</span>
          </td>
          <td width="10%">
            <span onclick={args.sortBy.bind(args.sortBy, 'ipAddress', 'asc')}>IP</span>
            <span onclick={args.sortBy.bind(args.sortBy, 'ipAddress', 'desc')}>Address</span></td>
          <td width="5%">
            <span onclick={args.sortBy.bind(args.sortBy, 'status', 'asc')}>Status</span>
            <span onclick={args.sortBy.bind(args.sortBy, 'status', 'desc')}>Status</span>
          </td>
          <td width="8%">
            <span onclick={args.sortBy.bind(args.sortBy, 'freeSpace', 'asc')}>Free Space</span>
            <span onclick={args.sortBy.bind(args.sortBy, 'freeSpace', 'desc')}>Free Space</span>
          </td>
          <td width="25%">
            <span onclick={args.sortBy.bind(args.sortBy, 'resources', 'asc')}>Resources</span>
            <span onclick={args.sortBy.bind(args.sortBy, 'resources', 'desc')}>Resources</span>
          </td>
          <td width="20%">
            <span onclick={args.sortBy.bind(args.sortBy, 'environments', 'asc')}>Environments</span>
            <span onclick={args.sortBy.bind(args.sortBy, 'environments', 'desc')}>Environments</span>
          </td>
        </tr>
        </thead>
      );
    }
  };

  return AgentsTableHeader;
});

