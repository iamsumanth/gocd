define(['mithril'], function (m) {

  var AgentsTableHeader = {

    controller: function (args) {

      var sortType = function () {
        return m.route.param('sortBy');
      };

      var orderType = function () {
        m.route.param('orderBy')
      };

      return {
        sortOrder: function (sortBy) {
          var attrName = sortType() || 'status';
          var orderBy  = orderType() || 'asc';
          return _.isEqual(attrName, sortBy) ? orderBy : '';
        },

        toggleSortingOrder: function (sortBy) {
          var sortingOrder = _.isEqual(sortBy, sortType()) ? (_.isEqual(orderType(), 'asc') ? 'desc' : 'asc') : 'asc';
          args.sortBy.bind(args.sortBy, sortBy, sortingOrder);
        }
      }
    },

    view: function (ctrl, args) {
      return (
        <thead>
        <tr>
          <th width="2%">
            <input type="checkbox"
                   checked={args.checkboxValue()}
                   onclick={m.withAttr('checked', function(value) {
                      args.onCheckboxClick(value);
                   })}
            />
          </th>
          <th width="13%">
            <span onclick={ctrl.toggleSortingOrder.bind(ctrl, 'hostname')}>Agent Name</span>
            <div class={"sort " + ctrl.sortOrder.bind(ctrl, 'hostname')}>
              <span class="up"></span>
              <span class="down"></span>
            </div>
          </th>
          <th width="5%">
            <span onclick={ctrl.toggleSortingOrder('sandbox')}>Sandbox</span>
            <div class={"sort " + ctrl.sortOrder.bind(ctrl, 'sandbox')}>
              <span class="up"></span>
              <span class="down"></span>
            </div>
          </th>
          <th width="12%">
            OS
            <div class={"sort " + ctrl.sortOrder('operatingSystem')}>
              <span class="up"></span>
              <span class="down"></span>
            </div>
          </th>
          <th width="8%">
            IP Address
            <div class={"sort " + ctrl.sortOrder('ipAddress')}>
              <span class="up"></span>
              <span class="down"></span>
            </div>
          </th>
          <th width="7%">
            Status
            <div class={"sort " + ctrl.sortOrder('status')}>
              <span class="up"></span>
              <span class="down"></span>
            </div>
          </th>
          <th width="9%">
            Free Space
            <div class={"sort " + ctrl.sortOrder('freeSpace')}>
              <span class="up"></span>
              <span class="down"></span>
            </div>
          </th>
          <th width="24%">
            Resources
            <div class={"sort " + ctrl.sortOrder('resources')}>
              <span class="up"></span>
              <span class="down"></span>
            </div>
          </th>
          <th width="20%">
            Environments
            <div class={"sort " + ctrl.sortOrder('environments')}>
              <span class="up"></span>
              <span class="down"></span>
            </div>
          </th>
        </tr>
        </thead>
      );
    }
  };

  return AgentsTableHeader;
});

