define(['mithril'], function (m) {
  var FilterAgentWidget = {
    view: function (ctrl, args) {
      return (
        <input type="text"
               oninput={m.withAttr("value", args.filterText)}
               value={args.filterText()}
               placeholder="Filter Agents" id="filter_agent"/>
      );
    }
  };

  return FilterAgentWidget;
});